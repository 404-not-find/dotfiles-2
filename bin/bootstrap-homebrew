#!/usr/bin/env bash

xcode-select --install

if ! command -v brew &>/dev/null; then
    /usr/bin/ruby -e "$(/usr/bin/curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
fi

formulae=(
    automake
    awscli
    bash
    cmake
    coreutils
    cscope
    curl
    diff-so-fancy
    emacs
    erlang
    exiftool
    git
    gnupg
    go
    htop
    jid
    jq
    libtool
    ncdu
    neovim
    ngrep
    ninja
    nmap
    node
    openssl
    pinentry-mac
    pkg-config
    postgresql
    rbenv
    shellcheck
    ssh-copy-id
    the_silver_searcher
    tmux
    wget
    youtube-dl
    zsh
)

brew install "${formulae[@]}"

brew install --HEAD universal-ctags/universal-ctags/universal-ctags

brew tap caskroom/cask

formulae=(
    calibre
    font-input
    wireshark
)

brew cask install "${formulae[@]}"
