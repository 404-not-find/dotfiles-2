#!/usr/bin/env bash

xcode-select --install

/usr/bin/ruby -e "$(/usr/bin/curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"

formulae=(
    automake
    awscli
    bash
    cmake
    coreutils
    cscope
    curl
    emacs
    erlang
    exiftool
    git
    gnupg
    go
    htop
    jid
    jq
    libtool
    ncdu
    neovim
    ngrep
    ninja
    nmap
    node
    openssl
    pinentry-mac
    pkg-config
    postgresql
    rbenv
    reattach-to-user-namespace
    shellcheck
    ssh-copy-id
    the_silver_searcher
    tmux
    universal-ctags
    wget
    youtube-dl
    zsh
)

for formula in "${formulae[@]}"; do
    brew install "$formula"
done

brew cask install font-input
