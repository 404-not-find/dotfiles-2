#!/usr/bin/env bash

xcode-select --install

if ! command -v brew &>/dev/null; then
    ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
fi

brew analytics off

formulae=(
    automake
    awscli
    bash
    cmake
    coreutils
    cscope
    curl
    emacs
    erlang
    exiftool
    git
    gnupg
    go
    hub
    jid
    jq
    libtool
    ncdu
    neovim
    netcat
    ninja
    nmap
    node
    openssl
    pinentry-mac
    pkg-config
    postgresql
    python
    rbenv
    ruby-build
    shellcheck
    socat
    sqlite
    ssh-copy-id
    sslyze
    the_silver_searcher
    tmux
    tree
    wget
    youtube-dl
    zsh
)

brew install "${formulae[@]}"

brew install --HEAD universal-ctags/universal-ctags/universal-ctags

brew tap caskroom/cask
brew tap homebrew/cask-fonts
brew tap homebrew/cask-versions

formulae=(
    caffeine
    calibre
    docker-edge
    flux
    font-fira-code
    font-input
    iterm2
    java
    spectacle
    vienna
    virtualbox
    virtualbox-extension-pack
    wireshark
)

brew cask install "${formulae[@]}"
