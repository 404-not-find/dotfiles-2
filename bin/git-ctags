#!/usr/bin/env bash

set -e

blacklist=(~ /usr/local/Homebrew)

for dir in "${blacklist[@]}"; do
    if [[ $PWD = $dir ]]; then
        echo 'nÃ¶' 1>&2
        exit 1
    fi
done

cd "$(git rev-parse --show-toplevel)"

echo 'Creating tags...'
ctags --fields=+S --exclude=.git --tag-relative=yes -Rf .git/tags.$$
mv .git/tags.$$ .git/tags
