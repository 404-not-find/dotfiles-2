#!/usr/bin/env bash

set -e

blacklist=(~ /usr/local/Homebrew)

for dir in "${blacklist[@]}"; do
    if [[ $PWD = $dir ]]; then
        echo 'nÃ¶' 1>&2
        exit 1
    fi
done

cd "$(git rev-parse --show-toplevel)"

echo 'Creating tags...'
git ls-files | ctags -L - --tag-relative=yes --fields=+S -f .git/tags.$$
mv .git/tags.$$ .git/tags
