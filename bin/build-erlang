#!/bin/bash

cd /data/languages/erlang

if [[ $1 != '-f' ]]; then
    git pull | grep 'Already up-to-date.' && exit 1
fi

make distclean
./otp_build autoconf
./configure --prefix=$HOME/local/erlang --enable-darwin-64bit --enable-m64-build --with-termcap --without-javac
make install
make install-docs
