#!/bin/bash

cd /data/languages/erlang

if [[ $1 != '-f' ]]; then
    git pull | grep 'Already up-to-date.' && exit 1
fi

make distclean
./configure --prefix=$HOME/local/erlang --enable-kernel-poll --enable-threads --enable-smp-support --enable-hipe --enable-darwin-64bit --enable-m64-build --without-javac
make install
